<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="mapper.userMapper" >
  <resultMap id="BaseResultMap" type="dao.user" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="age" property="age" jdbcType="INTEGER" />
  </resultMap>
  
  
  
  <select id="finduserList" resultMap="BaseResultMap" useCache="true" >
    select *  from user
  </select>
  <select id="selectuserByid" resultMap="BaseResultMap" parameterType="int">
   select * from user where id= #{id,jdbcType=INTEGER}
  </select>
  <update id="updateconfirm" parameterType="dao.user" >
  	update user set name='${name}',age=#{age} where id = #{id,jdbcType=INTEGER}
  </update>
  <!-- 分页SQL语句 --> 
    <select id="selectUserByPage" resultMap="BaseResultMap"> 
        select *  from user limit #{startPos},#{pageSize}  
    </select> 
<!-- 取得记录的总数 --> 
<select id="getUserCount" resultType="long">
        SELECT COUNT(*) FROM user  
</select>
</mapper>